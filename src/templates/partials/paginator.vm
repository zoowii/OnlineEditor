<nav>
    <ul class="pager">
        #if(${paginator.getPage()}>1)
        <li class="previous">
        #else
        <li class="previous disabled">
        #end
        #set($prev=${paginator.getPage()} - 1)
        <a href="?page=$prev}"><span aria-hidden="true">&larr;</span> Older</a></li>
        <li class="active"><span>第${paginator.getPage()}/${paginator.getPageCount()}页</span></li>
        #if(${paginator.getPage()} < ${paginator.getPageCount()})
        <li class="next">
        #else
        <li class="next disabled">
        #end
        #set($next=${paginator.getPage()} + 1)
        <a href="?page=$next">Newer <span aria-hidden="true">&rarr;</span></a></li>
    </ul>
</nav>